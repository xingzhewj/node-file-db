{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "CommonJS",
        "target": "es5",
        "allowJs": true,
        "esModuleInterop": true,
        "resolveJsonModule":true,
        "declaration": true,
        "declarationDir": "./typing/"
    },
    "awesomeTypescriptLoaderOptions": {
        "useBabel": true,
        "babelCore": "@babel/core",
        
    },
    "include": [
        "./lib/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}